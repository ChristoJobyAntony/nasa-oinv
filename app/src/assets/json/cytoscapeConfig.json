{
    "maxZoom": 1e2,
    "minZoom": 1e-2,
    "wheelSensitivity": 1,
    "layout": {
        "name" : "concentric",
        "spacingFactor": 5,
        "avoidOverlap": true,
        "animate" : true,
        "animationDuration": 500
    },
    "active-bg-color" : "white",
    "style": [
        {
            "selector": "edge",
            "style": {
                "label": "data(name)",
                "color" : "white",
                "text-rotation": "autorotate",
                "line-color" : "coral"
            }
        },
        {
            "selector": "node",
            "style": {
                "label": "data(name)",
                "color": "white",
                "text-wrap": "ellipsis",
                "text-max-width": "200px"
            }
        },
        {
            "selector": ".Dataset",
            "style": {
                "background-color": "Pink"
            }
        },
        {
            "selector": ".Bureau",
            "style": {
                "background-color": "Magenta"
            }
        },
        {
            "selector": ".Program",
            "style": {
                "background-color": "OrangeRed"
            }
        },
        {
            "selector": ".Keyword",
            "style": {
                "background-color": "Aquamarine"
            }
        },
        {
            "selector": ".Theme",
            "style": {
                "background-color": "ForestGreen"
            }
        },
        {
            "selector": ".Publisher",
            "style": {
                "background-color": "SpringGreen"
            }
        },
        {
            "selector": ".ContactPoint",
            "style": {
                "background-color": "Crimson"
            }
        },
        {
            "selector" : ".Agency",
            "style" : {
                "background-color" : "Gold"
            }
        },
        {
            "selector" : "node:active",
            "style" :{
                "ghost" :  "yes",
                "overlay-color" : "white",
                "overlay-opacity" : 0.2
            }
        }
    ]
}